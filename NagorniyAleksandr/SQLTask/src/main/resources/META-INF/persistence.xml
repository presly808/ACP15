<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!--some indetifier-->
    <persistence-unit name="jpa-task" transaction-type="RESOURCE_LOCAL">
        <description>
            Persistence unit for the JPA tutorial of the Hibernate Getting Started Guide
        </description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>university.models.Group</class>
        <class>university.models.Student</class>
        <class>university.models.SubjectCategory</class>
        <class>university.models.Subject</class>
        <class>university.models.Teacher</class>
        <class>university.models.Study</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <!--data base must be created before init persistence.xml -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/university_hibernate?serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="root" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" /> <!-- init DDL operations -->
        </properties>

    </persistence-unit>
</persistence>